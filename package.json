{
  "name": "kinto-chrome",
  "version": "0.1.0",
  "description": "storage.sync wrapper for Kinto.",
  "main": "lib/storage.js",
  "scripts": {
    "dist": "ulimit -n 2560 && ./node_modules/.bin/browserify -d -s storage -e lib/storage.js -o demo/storage_es5.js -t [ babelify --presets [ es2015 ] --sourceMapRelative . ]",
    "test": "npm run lint && npm run test-nocover",
    "test-nocover": "node_modules/.bin/_mocha --require ./test/_setup.js 'test/**/*_test.js'",
    "lint": "eslint lib/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tarekziade/kinto-chrome.git"
  },
  "author": "Mozilla <contact@mozilla.com>",
  "browser": {
    "localStorage": false
  },
  "dependencies": {
    "babel-core": ">=6.3.13",
    "babel-cli": ">=6.3.13",
    "btoa": "^1.1.2",
    "kinto": "^1.2.0",
    "fake-indexeddb": "^1.0.3"
  },
  "devDependencies": {
    "babel-eslint": ">=4.1.6",
    "babelify": ">=7.2.0",
    "browserify": "^12.0.0",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.0.0",
    "coveralls": "^2.11.3",
    "esdoc": "^0.4.0",
    "esdoc-importpath-plugin": "0.0.1",
    "eslint": "^1.2.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "sinon": "^1.14.1",
    "uglifyify": "^3.0.1",
    "babel-preset-es2015": ">=6.3.13"
  }
}
